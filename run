#!/bin/bash
set -e

zsh_file="$HOME/.zshrc"
zsh_theme_file="$HOME/.oh-my-zsh/custom/themes/ds.zsh-theme"
zsh_lang_file="$HOME/zsh/lang.sh"
zsh_work_file="$HOME/zsh/work.sh"

nvim_file="$HOME/.config/nvim/init.vim"
vim_pres_file="$HOME/.vim/presentation.vim"

regolith_config="$HOME/.config/regolith/i3/config"
regolith_resources="$HOME/.Xresources-regolith"
regolith_res_dir="$HOME/.Xresources.d"
regolith_bar_dir="$HOME/.config/i3xrocks"

function install() {
  echo "-> Getting latest updates from GitHub"
  git pull
  if [ ! -d "$HOME/zsh" ]; then
      mkdir $HOME/zsh
  fi
  echo "-> Copying configuration files"
  cat zsh/.zshrc > $zsh_file
  cp zsh/ds.zsh-theme "$HOME/.oh-my-zsh/custom/themes/"
  cp zsh/lang.sh $HOME/zsh/
  cp zsh/work.sh $HOME/zsh/
  cat vim/init.vim > $nvim_file
  if [ ! -d "$HOME/.vim" ]; then
      mkdir $HOME/.vim
  fi
  cp vim/presentation.vim "$HOME/.vim/"
  cp vim/presentation.vim "$HOME/.config/nvim/"
  if [ ! -d "$HOME/.config/regolith/i3" ]; then
      mkdir -p $HOME/.config/regolith/i3
  fi
  cp regolith/config "$HOME/.config/regolith/i3/"
  cp regolith/.Xresources-regolith "$HOME"
  cp -r regolith/.Xresources.d/ "$HOME"
  cp -r regolith/i3xrocks "$HOME/.config/"
  echo "-> Done"
}

function upload() {
  echo "-> Copying configuration files"
  cp $zsh_file zsh/
  cp $zsh_theme_file zsh/
  cp $zsh_lang_file zsh/
  cp $zsh_work_file zsh/
  cp $nvim_file vim/
  cp $vim_pres_file vim/
  cp $regolith_config regolith/
  cp $regolith_resources regolith/
  cp -r $regolith_res_dir regolith/
  cp -r $regolith_bar_dir regolith/
  git add -A && git commit -m "Dotfiles synced on $(date +%Y-%m-%d)" && git push
}

function print_help() {
  echo "Hey there."
  echo "    This run script requires an arg of either 'install' or 'upload'"
  echo "    -> install: Overwrites your local configs with those at the latest pull of this branch"
  echo "    -> upload: Copies your local configs into this dir and pushes them to the branch"
}

case $1 in
  "install")
    install
    ;;
  "upload")
    upload
    ;;
  *)
    print_help
    ;;
esac
