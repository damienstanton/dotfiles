{
    "languageserver": {
        "golang": {
          "command": "gopls",
          "rootPatterns": ["go.mod", ".vim/", ".git/", ".hg/"],
          "filetypes": ["go"]
        },
        "purescript": {
            "command": "purescript-language-server",
            "args": ["--stdio"],
            "filetypes": ["purescript"],
            "rootPatterns": ["bower.json", "psc-package.json", "spago.dhall"]
        },
        "metals": {
            "command": "metals-vim",
            "rootPatterns": ["build.sbt"],
            "filetypes": ["scala", "sbt"]
        }
    }
}

// Checklist for new installs
// Manual
// ------
// [ ] - Go
// [ ] - PureScript
// [ ] - Scala
// [ ] - Haskell

// Automated
// ---------
// [ ] - Python (coc-python)
// [ ] - Rust (coc-rls)
// [ ] - JSON (coc-json)
// [ ] - TypeScript (coc-tsserver)
